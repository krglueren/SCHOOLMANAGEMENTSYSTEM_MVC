<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SchoolManagementSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SchoolManagementSystem.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">OKUL İDARE SİSTEMİ</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <div class="dropdownn">
                                <button class="dropbtnn" style="color:black;">
                                    Öğrenciler
                                    <i class="fa fa-caret-down"></i>
                                </button>
                                <div class="dropdownn-contentt">
                                    <a href="/Ogrenci/OgrenciEkle" style="color:black;">Öğrenci Ekle</a>
                                    <a href="/Ogrenci/Index" style="color:black;">Öğrenci Listele</a>
                                </div>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="dropdownn">
                                <button class="dropbtnn" style="color:black;">Yönetim 
                                  <i class="fa fa-caret-down"></i>
                                </button>
                                <div class="dropdownn-contentt">
                                    <a href="/OkulYonetim/OkulYonetimEkle" style="color:black;">Yönetim Üyesi Ekle</a>
                                    <a href="/OkulYonetim/Index" style="color:black;">Yönetim Listele</a>
                                </div>
                              </div> 
                        </li>
                        <li class="nav-item">
                            <div class="dropdownn">
                                <button class="dropbtnn" style="color:black;">Dersler 
                                  <i class="fa fa-caret-down"></i>
                                </button>
                                <div class="dropdownn-contentt">
                                    <a href="/Ders/DersEkle" style="color:black;">Ders Ekle</a>
                                    <a href="/Ders/Index" style="color:black;">Ders Listele</a>
                                </div>
                              </div> 
                        </li>
                        <li class="nav-item">
                            <div class="dropdownn">
                                <button class="dropbtnn" style="color:black;">Öğrenci Ders 
                                  <i class="fa fa-caret-down"></i>
                                </button>
                                <div class="dropdownn-contentt">
                                    <a href="/OgrenciDers/OgrenciDersEkle" style="color:black;">Öğrenci Ders Ekle</a>
                                    <a href="/OgrenciDers/Index" style="color:black;">Öğrenci Ders Listele</a>
                                </div>
                              </div> 
                        </li>
                    </ul>
                </div>

                <div style="float:right; margin-right:50px;">
                    
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - KÖROĞLU A.Ş. - TÜM HAKLARI SAKLIDIR
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
